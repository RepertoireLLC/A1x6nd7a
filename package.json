{
  "name": "alexandria-browser",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "alexandria-browser/backend",
    "alexandria-browser/frontend"
  ],
  "scripts": {
    "dev": "npm run --workspaces --if-present --parallel dev",
    "build": "npm run --workspaces --if-present build",
    "start": "npm run --workspaces --if-present start",
    "dev:backend": "npm run dev --workspace alexandria-browser/backend",
    "dev:frontend": "npm run dev --workspace alexandria-browser/frontend",
    "dev:alexandria": "npm-run-all --parallel dev:backend dev:frontend",
    "build:alexandria": "npm run build --workspace alexandria-browser/backend && npm run build --workspace alexandria-browser/frontend",
    "test": "npm run --workspaces --if-present test"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
